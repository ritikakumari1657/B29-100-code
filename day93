Q143: Find and print the student with the highest marks.

#include <stdio.h>
struct Student {
    char name[50];
    int marks;
};
int main() {
    int n, i;
    printf("Enter the number of students: ");
    scanf("%d", &n);
     struct Student students[n];
    for (i = 0; i < n; i++) {
        printf("\nEnter details for student %d:\n", i + 1);
        printf("Name: ");
        scanf("%s", students[i].name); es
        printf("Marks: ");
        scanf("%d", &students[i].marks);
    }
    int maxMarks = -1;
    int topperIndex = -1;
    for (i = 0; i < n; i++) {
        if (students[i].marks > maxMarks) {
            maxMarks = students[i].marks;
            topperIndex = i;
        }
    }
    if (topperIndex != -1) {
        printf("\nStudent with the highest marks:\n");
        printf("Name: %s\n", students[topperIndex].name);
        printf("Marks: %d\n", students[topperIndex].marks);
    } else {
        printf("No student data was entered.\n");
    }
    return 0;
}
