Q147: Store employee data in a binary file using fwrite() and read using fread().

#include <stdio.h>
#include <stdlib.h>
#include <string.h>
typedef struct {
    int id;
    char name[50];
    float salary;
} Employee;
int main() {
    FILE *file;
    Employee emp_write, emp_read;
    int num_employees = 2;
    file = fopen("employees.bin", "wb");
    if (file == NULL) {
        perror("Error opening file for writing");
        return 1;
    }
    strcpy(emp_write.name, "John Doe");
    emp_write.id = 101;
    emp_write.salary = 55000.50;
    fwrite(&emp_write, sizeof(Employee), 1, file);
    strcpy(emp_write.name, "Jane Smith");
    emp_write.id = 102;
    emp_write.salary = 62000.75;   
    fwrite(&emp_write, sizeof(Employee), 1, file);  
    printf("Employee data written successfully.\n");
    fclose(file);
    file = fopen("employees.bin", "rb");
    if (file == NULL) {
        perror("Error opening file for reading");
        return 1;
    }
    printf("\nReading employee data from the file:\n");
    while (fread(&emp_read, sizeof(Employee), 1, file) == 1) {
        printf("ID: %d, Name: %s, Salary: %.2f\n", emp_read.id, emp_read.name, emp_read.salary);
    }
    fclose(file);
    return 0;
}
